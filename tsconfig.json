{
    "compilerOptions": {
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "pretty": true
    },
    "exclude": [
        "node_modules",
        "typings",
        "test",
        "dts"
    ]
}